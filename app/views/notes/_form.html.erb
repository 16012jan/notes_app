<%= form_for @note do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 10, class: 'form-control' %>
  </p>

  <p>
    <%= f.submit "Save", class: "btn btn-warning" %>
  </p>
<% end %>